        <div class="row">
            <div class="col-12">
              <div class="card mb-3 btn-reveal-trigger">
                <form action="profileEdit" method="POST" encType="multipart/form-data">
                <div class="card-header position-relative min-vh-25 mb-8 ">
                  <div class="cover-image">
                    
                    {{#if user.CoverPhoto}}
                    <div class="bg-holder rounded-3 rounded-bottom-0" id="upload-cover-images" style="background-image:url(http://localhost:3000/{{user.CoverPhoto}});">
                    </div>
                    {{else}}
                    <div class="bg-holder rounded-3 rounded-bottom-0" id="upload-cover-images" style="background-image:url(http://localhost:3000/assets/img/generic/4.jpg);">
                    </div>
                    {{/if}}
                    <!--/.bg-holder-->

                    <input class="d-none" onchange="loadCover(event)" id="upload-cover-image" name="uploadcover" type="file" />
