<div class="view-user p-5">
  {{#each rows}}
  <div class="row mb-5">
    <div class="col text-center">
      <h3>
        {{this.first_name}}
        {{this.last_name}}
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">
              First Name
            </th>
            <th scope="col">
              Last Name
            </th>
            <th scope="col">
              Email
            </th>
            <th scope="col">
              Phone
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">
              {{this.first_name}}
            </th>
            <td>
              {{this.last_name}}
            </td>
            <td>
              {{this.email}}
            </td>
            <td>
              {{this.phone}}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col">
        <b>
          Comments
        </b>
      </div>
    </div>
    <div class="row">
      <div class="col">
        {{this.comments}}
      </div>
    </div>
  </div>
{{/each}}
</div>

