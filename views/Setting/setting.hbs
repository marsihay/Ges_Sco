                <div class="card-header">
                  <h5 class="mb-0">Les mois pour l'écolage</h5>
                </div>
                <div class="card-body bg-light">
                  <div class="table-responsive scrollbar">
                        <table class="table text-center">
                          <thead>
                            <tr class="">
                              <th scope="col">ID</th>
                              <th scope="col">Mois</th>
                              <th scope="col">Actions</th>
                            </tr>
                          </thead>
                          <tbody class="bg-light Eco">
                            {{#each ecolage}}
                            <tr>
                              <td>{{ID_Eco}}</td></script>
                              <td>{{Label_Eco}}</td>
                              <td>
                                <div>
                                  <button class="btn p-0" type="button" data-bs-toggle="modal" data-bs-target="#Mois-modal" title="Edit"><span class="text-500 fas fa-edit"></span></button>
                                </div>
                              </td>
                            </tr>
                            {{/each}}
                          </tbody>
                          <script>
                            $('tbody.Eco tr').click(
                            function(){
                              var id = $(this).find("td:nth-child(1)").html();
                              var label = $(this).find("td:nth-child(2)").html();
                            $('#ID_Eco').val(id);
                            $('#Label_Eco').val(label);
                            });
                          </script>
                        </table>
                      </div>
                </div>
              </div>
              <div class="card mb-3 mb-lg-0 ">
                <div class="card-header">
                  <h5 class="mb-0">Niveau</h5>
                </div>
                <div class="card-body bg-light"><a class="mb-4 d-block d-flex align-items-center newNIV" href="#education-form" data-bs-toggle="collapse" aria-expanded="false" aria-controls="education-form"><span class="circle-dashed"><span class="fas fa-plus"></span></span><span class="ms-3">Ajouter un nouveau Niveau</span></a>
                  <div class="collapse" id="education-form">
                    <form class="row">
                      <div class="col-3 mb-3 text-lg-end">
                        <label class="form-label" for="Label_Niv">Désignation</label>
                      </div>
                      <div class="col-9 col-sm-7 mb-3">
                        <input class="form-control form-control-sm" id="ID_Niv" name="ID_Niv" type="text" hidden/>
                        <input class="form-control form-control-sm" id="Label_Niv" name="Label_Niv" type="text" />
                      </div>
                      <div class="col-3 mb-3 text-lg-end">
                        <label class="form-label" for="Frais_Sco">Frais de scolarité</label>
                      </div>
                      <div class="col-9 col-sm-7 mb-3">
                        <input class="form-control form-control-sm" id="Frais_Sco" name="Frais_Sco" type="text" />
                      </div>
                      <div class="col-3 mb-3 text-lg-end">
                        <label class="form-label" for="Nb_mois">Nombre du mois</label>
                      </div>
                      <div class="col-9 col-sm-7 mb-3">
                        <input class="form-control form-control-sm" id="Nb_mois" name="Nb_mois" type="text" />
                      </div>
                      <div class="col-9 col-sm-7 offset-3">
                        <button class="btn btn-falcon-primary me-3 mb-1" type="submit">
                          <span class="fas fa-save" data-fa-transform="shrink-3"></span>
                          Update
                        </button>
                      </div>
                    </form>
                    <div class="border-dashed-bottom my-3"></div>
                  </div>
                    {{#each niveau}}
                  <div class="d-flex ">
                    <a href="#!">
                      <div class="avatar avatar-3xl">
                        <div class="avatar-name rounded-circle"><span class="ID">{{ID_Niv}}</span></div>
                      </div>
                    </a>
                    <div class="flex-1 position-relative ps-3">
                      <h6 class="fs-0 mb-0"> <a href="#!">Niveau {{Label_Niv}}<span data-bs-toggle="tooltip" data-bs-placement="top" title="Verified"><small class="fa fa-check-circle text-primary" data-fa-transform="shrink-4 down-2"></small></span></a></h6>
                      <p class="mb-1">Frais de scolarité à payer pour ce niveau est</p>
                      <p class="text-1000 mb-0">MGA {{Decimal Frais_Sco}}</p>
                      <p class="text-1000 mb-0">Pendant {{Nb_mois}} pour le niveau {{Label_Niv}}</p>
                      <div class="border-dashed-bottom my-3"></div>
                    </div>
                    <a class="mb-4 d-block d-flex align-items-center text-warning niveau" href="#education-form" data-bs-toggle="collapse" title="Edit" aria-expanded="false" aria-controls="education-form"><span class="circle-dashed bg-white">
                      <span class="fas fa-edit"></span></span><span class="ms-3">  </span>
                    <span class="ID" hidden>{{ID_Niv}}</span>
                    <span class="NIV" hidden>{{Label_Niv}}</span>
                    <span class="Mont" hidden>{{Frais_Sco}}</span>
                    <span class="MOIS" hidden>{{Nb_mois}}</span>
                    </a>
                  </div>
                  <script>
                            $('a.newNIV').click(
                            function(){
                            $('#ID_Niv').val("");
                            $('#Label_Niv').val("");
                            $('#Frais_Sco').val("");
                            $('#Nb_mois').val("");
                            });
                            $('a.niveau').click(
                            function(){
                              var id = $(this).find('span.ID').html();
                              var niv = $(this).find('span.NIV').html();
                              var mont = $(this).find('span.Mont').html();
                              var mois = $(this).find('span.MOIS').html();
                            $('#ID_Niv').val(id);
                            $('#Label_Niv').val(niv);
                            $('#Frais_Sco').val(mont);
                            $('#Nb_mois').val(mois);
                            });
                          </script>
                  {{/each}}
                </div>
              </div>
