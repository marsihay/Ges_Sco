
<div class="position-absolute top-50 start-50 translate-middle">
  <div class="card mb-3">
    <div class="card-header">
      <h5 class="mb-0 text-center">
        Modification d'un droit d'inscription
      </h5>
    </div>
    <div class="card-body  bg-light col-lg-12">
      {{#if rows}}
      <form
        action="/editdroit/{{rows.ID_Droit}}"
        id="Edit_Droit"
        method="POST"
        class="row g-3 needs-validation"
        novalidate=""
      >
        {{#if error}}
          <div
            class="alert alert-danger border-2 d-flex align-items-center"
            role="alert"
          >
            <div class="bg-danger me-3 icon-item">
              <span class="fas fa-times-circle text-white fs-3"></span>
            </div>
            <p class="mb-0 flex-1">
              {{error}}
              !
            </p>
            <button
              class="btn-close"
              type="button"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
        {{/if}}
        <div class="col-0">
          <input
            class="form-control"
            type="hidden"
            value="{{rows.ID_Droit}}"
            name="ID_Droit"
          />
        </div>
        <div class="col-lg-12">
          <label class="form-label" for="Label_D">
            DÃ©signation
          </label>
          <input
            class="form-control"
            id="Label_D"
            name="Label_D"
            type="text"
            value="{{rows.Label_D}}"
            maxlength="30"
            autocomplete="off"
            required
          />
          <div class="invalid-feedback" for="username"></div>
          <div class="valid-feedback" for="username"></div>
        </div>
        <div class="col-lg-12">
          <label class="form-label" for="montant">
            Montant
          </label>
          <input
            class="form-control"
            id="montant"
            name="montant"
            type="text"
            value="{{rows.montant}}"
            maxlength="30"
            autocomplete="off"
          />
          <div class="invalid-feedback" for="fonction"></div>
          <div class="valid-feedback" for="fonction"></div>
        </div>
        <div class="col-12 d-flex justify-content-end">
          <a href="/setting" class="btn btn-falcon-default me-2 mb-1 " type="button">
            <span class="fas fa-times-circle" data-fa-transform="shrink-3"></span>
            Annuler
          </a>
          <button class="btn btn-falcon-primary me-3 mb-1" type="submit">
            <span class="fas fa-save" data-fa-transform="shrink-3"></span>
            Update
          </button>
        </div>
      </form>
{{/if}}
    </div>
  </div>
</div>